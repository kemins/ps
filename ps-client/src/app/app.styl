@require "./../styles/buttons";
@require "./../styles/colors";
@require "./../styles/layout";

html
body
  height 100%

app
  display block
  width 100%
  height 100%

.app-state
  margin 0
  flex 1

.home
  flex 1

.content-holder
  display flex
  flex-direction column
  height 100%
  width 100%

.bottom-bar
.top-bar
  display flex
  flex-direction row
  padding 0
  margin 0
  position fixed
  z-index $backdrop-z-index
  width 100%
  top 0
  right 0

.bottom-bar
  top auto
  bottom 0

.carousel-indicators
  display none

.menu-icon
  position fixed
  left 5px
  top 5px
  z-index $top-bar-z-index

.close-social-box
  top 50px
  left 50%
  position absolute
  z-index $top-bar-z-index

.notification-box
  position fixed
  width 100%
  left 0
  bottom 0

  .alert
    margin-bottom 0

.oa_social_login_container
  position absolute
  top 45px
  padding-top 10px
  z-index $top-bar-z-index - 1
  height 70px
  transform translateX(-50%)
  left 50%
  overflow hidden
  box-shadow $primaryColor 1px 1px 1px 1px
  background-color $light-color
  animation-name fade-in-animation
  animation-duration 1s

@keyframes fade-in-animation {
  from {opacity: 0;}
  to {opacity: 1;}
}