@require "./../styles/buttons";
@require "./../styles/colors";
@require "./../styles/layout";

html
body
  height 100%

app
  display block
  width 100%
  height 100%

.app-state
  margin 0
  flex 1

.home
  flex 1

.content-holder
  display flex
  flex-direction column
  height 100%
  width 100%

.bottom-bar
.top-bar
  display flex
  flex-direction row
  padding 0
  margin 0
  position fixed
  width 100%
  top 0
  right 0

.bottom-bar
  position fixed
  top auto
  bottom 0

.top-tool-bar
  min-height auto !important
  .mat-toolbar-row
    height $header-height


.centered-box
  display flex

  label
    line-height $header-height
    font-size 0.8em

.carousel-indicators
  display none

.menu-icon
  color #fff
  position fixed
  left 5px
  top 5px
  z-index $top-bar-z-index

.close-social-box
  right 10px
  top 10px
  position absolute
  z-index $top-bar-z-index

.notification-box
  position fixed
  width 100%
  left 0
  bottom 0

  .alert
    margin-bottom 0

.social-login-box
  position absolute
  top 45px
  z-index $top-bar-z-index - 1
  transform translateX(-50%)
  left 50%
  box-shadow $primaryColor 1px 1px 1px 1px
  background-color $light-color
  animation-name fade-in-animation
  animation-duration 1s

.oa_social_login_container
  padding-top 10px
  height 70px
  width 170px
  overflow hidden

.img-circle
  border-radius 50%

.file-container
  overflow hidden
  position relative
  color: $primaryColor
  text-decoration underline
  position cursor

  label
    cursor pointer

.file-container [type=file]
  top -999px
  left  -999px
  position absolute

@keyframes fade-in-animation {
  from {opacity: 0;}
  to {opacity: 1;}
}