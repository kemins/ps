$header-height = 100px
$backdrop-z-index = 999
$top-bar-z-index = $backdrop-z-index - 1

.fill  display flex

.grow-equally
  flex-grow 1

.full-size
  width 100%
  height 100%

md-sidenav
  width 200px

md-sidenav-layout
  height 100%

.relative
  position relative


.translate-center
  position absolute
  left 50%
  top 50%
  transform translate(-50%, -50%)

.backdrop
  position fixed
  left 0
  right 0
  top 0
  bottom 0
  width 100%
  height 100%
  z-index $backdrop-z-index
